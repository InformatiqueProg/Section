<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">
    <route id="section.admin.view-all" path="/admin/module/Section">
        <default key="_controller">Section\Controller\Admin\SectionController::viewAll</default>
    </route>
    <route id="section.admin.create" path="/admin/module/Section/create">
        <default key="_controller">Section\Controller\Admin\SectionController::create</default>
    </route>
    <route id="section.admin.edit" path="/admin/module/Section/edit">
        <default key="_controller">Section\Controller\Admin\SectionController::edit</default>
    </route>
    <route id="section.admin.update" path="/admin/module/Section/update">
        <default key="_controller">Section\Controller\Admin\SectionController::update</default>
    </route>
    <route id="section.admin.delete" path="/admin/module/Section/delete">
        <default key="_controller">Section\Controller\Admin\SectionController::delete</default>
    </route>
    <route id="section.admin.toggle-online" path="/admin/module/Section/toggle-online">
        <default key="_controller">Section\Controller\Admin\SectionController::setToggleVisibility</default>
    </route>
</routes>
